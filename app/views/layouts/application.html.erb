<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Fliplingo</title>

  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>
    <div class="navbar container">
      <div class="navbar-inner">
        <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target="#nav-collapse-03">
        </button>
        <%= link_to 'Fliplingo', home_path, class: 'logo pull-left' %>
        <div class="nav-collapse collapse" id="nav-collapse-02">
          <ul class="nav pull-right">
            <li><%= link_to 'Upgrade', upgrade_path %></a></li>
            <li><%= link_to 'Help', help_path %></a></li>
            <li><%= link_to 'Your profile', user_path(current_user) %></a></li>
          </ul> <!-- /nav -->
        </div><!--/.nav-collapse -->
      </div>
    </div>
  </header>
  <!-- /header -->

  <%= yield %>

  <footer class="bottom-menu bottom-menu-inverse">
    <div class="container">
      <div class="row">
        <div class="span2 brand">
          <a href="#" class="brand">Fliplingo</a>
        </div>

        <div class="span8">
          <ul class="bottom-links">
            <li><a href="#">About Us</a></li>
            <li><a href="#">Help</a></li>
            <li class="active"><a href="#">Jobs</a></li>
            <li><a href="#">Privacy</a></li>
            <li><a href="#">Terms</a></li>
            <li><a href="#">Follow Us</a></li>
            <li><a href="#">Support</a></li>
            <li><a href="#">Links</a></li>
          </ul>
        </div>

        <div class="span2">
          <ul class="bottom-icons">
            <li><a href="#" class="fui-facebook"></a></li>
            <li><a href="#" class="fui-twitter"></a></li>
          </ul>
        </div>
      </div>
    </div>
  </footer>
  <!-- /footer -->

</body>
</html>
