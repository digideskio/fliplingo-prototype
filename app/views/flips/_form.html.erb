<%= form_for flip do |f| %>
  <div class="row">
    <div class="span2">
      <p><%= f.label :from %></p>
    </div>
    <%= f.select :from, options_from_collection_for_select(current_user.accounts, "id", "name", flip.from) %>
  </div>

  <div class="row">
    <div class="span2">
      <p><%= f.label :to %></p>
    </div>
    <%= f.select :to, options_from_collection_for_select(current_user.accounts, "id", "name", flip.to)  %>
  </div>

  <div class="row">
    <div class="span2">
      <p><%= f.label :kind, 'Quality' %></p>
    </div>
    <%= f.select :kind, ['computer', 'human']  %>

  </div>

  <div class="row">
    <div class="span2">
      <p><%= f.label :notification %></p>
    </div>
    <%= f.check_box :notification %>
  </div>
  <div class="row">
    <span class="span2"> </span>
    <%= f.submit value: 'Create', class: "btn span3 btn-primary" %>
  </div>
<% end %>
